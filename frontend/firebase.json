{
  "hosting": {
    "public": "build",
    "ignore": [
      "**/.*",
      "**/node_modules/**",
      "firebase.json"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "app-backend",
          "region": "us-east1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
